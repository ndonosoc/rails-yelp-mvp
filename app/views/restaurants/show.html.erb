<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>
<%= link_to("Return to index", "/restaurants") %>

<% if @restaurant.reviews.size > 0 %>
  <% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
  <% end %>
<% else %>
  <%= "No reviews yet, add one!"  %>
<% end %>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>

<form action="restaurants/3/reviews" method="post">

</form>
